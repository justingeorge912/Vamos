<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VamosElectrica" parent="Theme.MaterialComponents.NoActionBar">

        <item name="android:windowDisablePreview">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/VamosGreen</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->

    </style>
    <style name="Theme.VamosElectrica.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.VamosElectrica.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.VamosElectrica.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>


<!-- Base application theme is the default theme. -->
